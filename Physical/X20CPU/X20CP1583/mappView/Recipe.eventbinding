				</ReadTarget>
			</Operand>
			<EventHandler>
				<Action>					
					<!-- Show message box before saving />-->
					<Target xsi:type="clientSystem.Action">
						<Method xsi:type="clientSystem.Action.ShowMessageBox" type="YesNo" message="Overwrite recipe?" header="Overwrite recipe" icon="Question"  />
					</Target>
					<Result>
						<ResultHandler condition="result = 1">
							<Sequence>
								<!-- Set slot ID />-->
